{
    "name": "generator-cake-addin",
    "version": "0.1.0-alpha1",
    "description": "A yeoman generator to get you quickly set up for writing Cake Addins.",
    "scripts": {
        "setup": "tsc gulpfile.ts --target ES2018 --module commonjs --esModuleInterop",
        "build": "gulp build",
        "test": "jest",
        "watch": "gulp watch"
    },
    "files": [
        "generators"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/WormieCorp/generator-cake-addin.git"
    },
    "keywords": [
        "cake-addin",
        "yeoman-generator"
    ],
    "author": "Kim J. Nordmo",
    "license": "GPL-3.0-or-later",
    "bugs": {
        "url": "https://github.com/WormieCorp/generator-cake-addin/issues"
    },
    "homepage": "https://github.com/WormieCorp/generator-cake-addin#readme",
    "engines": {
        "node": ">= 8.0.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "json"
        ],
        "transform": {
            "\\.(ts|tsx)$": "ts-jest"
        },
        "testRegex": "/__tests__/.*\\.(ts|tsx)$",
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            "tepmlates"
        ]
    },
    "dependencies": {
        "chalk": "^2.4.2",
        "fullname": "^4.0.0",
        "username": "^5.0.0",
        "uuid": "^3.3.2",
        "yeoman-generator": "^4.0.0",
        "yosay": "^2.0.2"
    },
    "devDependencies": {
        "@types/command-exists": "^1.2.0",
        "@types/gulp": "^4.0.6",
        "@types/gulp-sourcemaps": "^0.0.32",
        "@types/jest": "^24.0.13",
        "@types/merge-stream": "^1.1.2",
        "@types/prettier": "^1.16.4",
        "@types/uuid": "^3.4.4",
        "@types/yeoman-assert": "^3.1.1",
        "@types/yeoman-environment": "^2.3.1",
        "@types/yeoman-generator": "^3.1.3",
        "@types/yeoman-test": "^2.0.2",
        "@types/yosay": "^0.0.29",
        "command-exists": "^1.2.8",
        "del": "^4.1.1",
        "gulp": "^4.0.2",
        "gulp-prettier": "^2.1.0",
        "gulp-sourcemaps": "^2.6.5",
        "gulp-tslint": "^8.1.4",
        "gulp-typescript": "^5.0.1",
        "jest": "^24.8.0",
        "merge-stream": "^2.0.0",
        "prettier": "^1.17.1",
        "ts-jest": "^24.0.2",
        "tslint": "^5.16.0",
        "tslint-config-prettier": "^1.18.0",
        "tslint-plugin-prettier": "^2.0.1",
        "typescript": "^3.5.1",
        "yeoman-assert": "^3.1.1",
        "yeoman-test": "^2.0.0"
    }
}
