{
    "name": "generator-cake-addin",
    "version": "1.3.0",
    "description": "A yeoman generator to get you quickly set up for writing Cake Addins.",
    "icon": "graphics/icon_128x128.png",
    "scripts": {
        "commit": "git-cz",
        "setup": "tsc gulpfile.ts --target ES2018 --module commonjs --esModuleInterop",
        "build": "gulp build",
        "test": "jest",
        "watch": "gulp watch",
        "semantic-release": "semantic-release"
    },
    "files": [
        "generators"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/WormieCorp/generator-cake-addin.git"
    },
    "keywords": [
        "cake-addin",
        "yeoman-generator"
    ],
    "author": "Kim J. Nordmo",
    "license": "GPL-3.0-or-later",
    "bugs": {
        "url": "https://github.com/WormieCorp/generator-cake-addin/issues"
    },
    "homepage": "https://github.com/WormieCorp/generator-cake-addin#readme",
    "engines": {
        "node": ">= 8.0.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "json"
        ],
        "transform": {
            "\\.(ts|tsx)$": "ts-jest"
        },
        "testRegex": "/__tests__/.*\\.(ts|tsx)$",
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            "tepmlates"
        ]
    },
    "dependencies": {
        "chalk": "^3.0.0",
        "fullname": "^4.0.0",
        "gulp-if": "^3.0.0",
        "through2": "^3.0.1",
        "username": "^5.1.0",
        "uuid": "^3.3.2",
        "yeoman-generator": "^4.4.0",
        "yosay": "^2.0.2"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "@semantic-release/changelog": "3.0.6",
        "@semantic-release/commit-analyzer": "7.0.0",
        "@semantic-release/exec": "4.0.0",
        "@semantic-release/git": "8.0.0",
        "@semantic-release/github": "6.0.1",
        "@semantic-release/npm": "6.0.0",
        "@semantic-release/release-notes-generator": "7.3.5",
        "@types/command-exists": "1.2.0",
        "@types/gulp": "4.0.6",
        "@types/gulp-if": "^0.0.33",
        "@types/gulp-sourcemaps": "0.0.32",
        "@types/jest": "24.9.0",
        "@types/merge-stream": "1.1.2",
        "@types/prettier": "1.19.0",
        "@types/through2": "^2.0.34",
        "@types/uuid": "3.4.6",
        "@types/yeoman-assert": "3.1.1",
        "@types/yeoman-environment": "2.3.2",
        "@types/yeoman-generator": "3.1.4",
        "@types/yeoman-test": "2.0.3",
        "@types/yosay": "0.0.29",
        "command-exists": "1.2.8",
        "commitizen": "4.0.3",
        "conventional-changelog-wormiecorp": "1.1.1",
        "cz-conventional-changelog": "3.0.2",
        "del": "5.1.0",
        "gulp": "4.0.2",
        "gulp-prettier": "2.3.0",
        "gulp-sourcemaps": "2.6.5",
        "gulp-tslint": "8.1.4",
        "gulp-typescript": "6.0.0-alpha.1",
        "husky": "4.0.10",
        "jest": "24.9.0",
        "lint-staged": "9.5.0",
        "merge-stream": "2.0.0",
        "prettier": "1.19.1",
        "semantic-release": "16.0.1",
        "ts-jest": "24.3.0",
        "tslint": "5.20.1",
        "tslint-config-prettier": "1.18.0",
        "tslint-plugin-prettier": "2.1.0",
        "typescript": "3.7.4",
        "yeoman-assert": "3.1.1",
        "yeoman-test": "2.1.0"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "release": {
        "branch": "master",
        "plugins": [
            [
                "@semantic-release/commit-analyzer",
                {
                    "config": "conventional-changelog-wormiecorp",
                    "releaseRules": [
                        {
                            "type": "chore",
                            "scope": "deps",
                            "release": "patch"
                        }
                    ]
                }
            ],
            [
                "@semantic-release/release-notes-generator",
                {
                    "config": "conventional-changelog-wormiecorp"
                }
            ],
            [
                "@semantic-release/changelog",
                {
                    "changelogTitle": "# Cake Addin generator changelog"
                }
            ],
            [
                "@semantic-release/exec",
                {
                    "prepareCmd": "./build.sh --build --no-pack"
                }
            ],
            [
                "@semantic-release/npm",
                {
                    "tarballDir": "dist"
                }
            ],
            "@semantic-release/git",
            [
                "@semantic-release/github",
                {
                    "assets": [
                        {
                            "path": "dist/*.tgz",
                            "label": "generator-cake-addin npm package"
                        }
                    ]
                }
            ]
        ]
    },
    "lint-staged": {
        "*.{ts,js}": [
            "tslint --fix",
            "prettier --write",
            "git add"
        ],
        "*.{md,json,yml,yaml}": [
            "prettier --write",
            "git add"
        ]
    }
}
