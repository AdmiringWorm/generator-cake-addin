language: csharp
dist: xenial
os:
	- linux
	- osx
mono: latest
dotnet: 3.1.402

cache:
	directories:
		- tools

env:
	global:
		- DOTNET_CLI_TELEMETRY_OPTOUT: 1
		- DOTNET_SKIP_FIRST_TIME_EXPERIENCE: true

git:
	depth: false

branches:
	only:
		- master
		- develop
		- /release\/.*/
		- /hotfix\/.*/

script:
	- ./build.sh --target=CI
